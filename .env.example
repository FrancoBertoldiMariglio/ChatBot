# ===========================================
# AI Customer Support MVP - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ----- Application -----
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# ----- Twilio (WhatsApp) -----
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ----- LLM Providers -----
# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Google (Vertex AI / Gemini)
GOOGLE_API_KEY=your_google_api_key
# Or for Vertex AI:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# VERTEX_PROJECT=your-gcp-project
# VERTEX_LOCATION=us-central1

# Anthropic (optional fallback)
ANTHROPIC_API_KEY=your_anthropic_api_key

# ----- LiteLLM Configuration -----
LITELLM_PRIMARY_MODEL=gemini/gemini-1.5-flash
LITELLM_FALLBACK_MODEL=gpt-4o-mini

# ----- Embeddings -----
# Provider: "google" (FREE, recommended) or "openai" (paid)
EMBEDDING_PROVIDER=google
# Optional fallback provider
# EMBEDDING_FALLBACK_PROVIDER=openai
# OpenAI embedding model (if using OpenAI)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
# Google embedding model (if using Google) - FREE up to 1500 RPM
GOOGLE_EMBEDDING_MODEL=text-embedding-004

# ----- Qdrant (Vector Database) -----
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
# For Qdrant Cloud:
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your_qdrant_api_key

# ----- Google Cloud (Firestore) -----
# For local development, use emulator:
FIRESTORE_EMULATOR_HOST=localhost:8080
# For production:
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
# GCP_PROJECT_ID=your-gcp-project

# ----- AWS (Sentiment Analysis) -----
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ----- Chatwoot (Human Handoff) -----
CHATWOOT_BASE_URL=https://your-chatwoot-instance.com
CHATWOOT_API_KEY=your_chatwoot_api_key
CHATWOOT_ACCOUNT_ID=1

# ----- Security -----
# Secret key for signing (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# ----- Rate Limiting -----
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ----- Logging -----
LOG_LEVEL=INFO
LOG_FORMAT=json
